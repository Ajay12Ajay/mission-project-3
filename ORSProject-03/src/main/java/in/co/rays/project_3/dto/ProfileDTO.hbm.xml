<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="in.co.rays.project_3.dto">

	<class name="ProfileDTO" table="st_profile">

		<id name="id" type="java.lang.Long">
			<column name="ID" />
			<generator class="increment" />
		</id>

		<property name="fullName" type="java.lang.String">
			<column name="FULLNAME" />
		</property>

		<property name="gender" type="java.lang.String">
			<column name="GENDER" />
		</property>

		<property name="dob" type="java.util.Date">
			<column name="DOB" />
		</property>

		<property name="profileStatus" type="java.lang.String">
			<column name="PROFILESTATUS" />
		</property>

		<!-- BaseDTO Fields -->

		<property name="createdBy" type="java.lang.String"
			length="50">
			<column name="CREATED_BY" />
		</property>

		<property name="modifiedBy" type="java.lang.String"
			length="50">
			<column name="MODIFIED_BY" />
		</property>

		<property name="createdDatetime" type="java.sql.Timestamp">
			<column name="CREATED_DATETIME" />
		</property>

		<property name="modifiedDatetime" type="java.sql.Timestamp">
			<column name="MODIFIED_DATETIME" />
		</property>

	</class>

</hibernate-mapping>
