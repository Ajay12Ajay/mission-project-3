<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="in.co.rays.project_3.dto">

	<class name="EventDTO" table="ST_EVENT">

		<!-- Primary Key -->
		<id name="id" type="java.lang.Long">
			<column name="ID" />
			<generator class="increment" />
		</id>

		<!-- Event Code (Unique Recommended at DB level) -->
		<property name="eventCode" type="java.lang.String">
			<column name="EVENT_CODE" />
		</property>

		<!-- Event Name -->
		<property name="eventName" type="java.lang.String">
			<column name="EVENT_NAME" />
		</property>

		<!-- Organizer -->
		<property name="organizer" type="java.lang.String">
			<column name="ORGANIZER" />
		</property>

		<!-- Event Date -->
		<property name="eventDate" type="java.util.Date">
			<column name="EVENT_DATE" />
		</property>

		<!-- BaseDTO Fields -->

		<property name="createdBy" type="java.lang.String"
			length="50">
			<column name="CREATED_BY" />
		</property>

		<property name="modifiedBy" type="java.lang.String"
			length="50">
			<column name="MODIFIED_BY" />
		</property>

		<property name="createdDatetime" type="java.sql.Timestamp">
			<column name="CREATED_DATETIME" />
		</property>

		<property name="modifiedDatetime" type="java.sql.Timestamp">
			<column name="MODIFIED_DATETIME" />
		</property>

	</class>

</hibernate-mapping>