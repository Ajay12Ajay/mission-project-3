<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="in.co.rays.project_3.dto">

	<class name="VisitorDTO" table="ST_VISITOR">

		<!-- Primary Key -->
		<id name="id" type="java.lang.Long">
			<column name="ID" />
			<generator class="increment" />
		</id>

		<!-- Visitor Pass Code -->
		<property name="visitorPassCode" type="java.lang.String">
			<column name="VISITOR_PASS_CODE" />
		</property>

		<!-- Visitor Name -->
		<property name="visitorName" type="java.lang.String">
			<column name="VISITOR_NAME" />
		</property>

		<!-- Visitor Purpose -->
		<property name="visitorPurpose" type="java.lang.String">
			<column name="VISITOR_PURPOSE" />
		</property>

		<!-- Visit Date -->
		<property name="visitDate" type="java.util.Date">
			<column name="VISIT_DATE" />
		</property>

		<!-- Visit Status -->
		<property name="visitStatus" type="java.lang.String">
			<column name="VISIT_STATUS" />
		</property>

		<!-- BaseDTO Fields -->

		<property name="createdBy" type="java.lang.String"
			length="50">
			<column name="CREATED_BY" />
		</property>

		<property name="modifiedBy" type="java.lang.String"
			length="50">
			<column name="MODIFIED_BY" />
		</property>

		<property name="createdDatetime" type="java.sql.Timestamp">
			<column name="CREATED_DATETIME" />
		</property>

		<property name="modifiedDatetime" type="java.sql.Timestamp">
			<column name="MODIFIED_DATETIME" />
		</property>

	</class>

</hibernate-mapping>
