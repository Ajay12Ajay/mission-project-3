<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="in.co.rays.project_3.dto">

	<class name="AttendanceDTO" table="ST_ATTENDANCE">

		<id name="id" type="java.lang.Long">
			<column name="ID" />
			<generator class="increment" />
		</id>

		<property name="name" type="java.lang.String">
			<column name="NAME" />
		</property>

		<property name="attendanceDate" type="java.util.Date">
			<column name="ATTENDANCE_DATE" />
		</property>

		<property name="attendanceStatus" type="java.lang.String">
			<column name="ATTENDANCE_STATUS" />
		</property>

		<property name="remarks" type="java.lang.String">
			<column name="REMARKS" />
		</property>

		<!-- BaseDTO Fields -->

		<property name="createdBy" type="java.lang.String"
			length="50">
			<column name="CREATED_BY" />
		</property>

		<property name="modifiedBy" type="java.lang.String"
			length="50">
			<column name="MODIFIED_BY" />
		</property>

		<property name="createdDatetime" type="java.sql.Timestamp">
			<column name="CREATED_DATETIME" />
		</property>

		<property name="modifiedDatetime" type="java.sql.Timestamp">
			<column name="MODIFIED_DATETIME" />
		</property>

	</class>

</hibernate-mapping>
