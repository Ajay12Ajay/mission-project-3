<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="in.co.rays.project_3.dto">

	<class name="CertificateDTO" table="ST_CERTIFICATE">

		<!-- Primary Key -->
		<id name="id" type="java.lang.Long">
			<column name="ID" />
			<generator class="increment" />
		</id>

		<!-- Certificate Name -->
		<property name="certificateName" type="java.lang.String">
			<column name="CERTIFICATE_NAME" />
		</property>

		<!-- Issued To -->
		<property name="issueTo" type="java.lang.String">
			<column name="ISSUE_TO" />
		</property>

		<!-- Issue Date -->
		<property name="issueDate" type="java.util.Date">
			<column name="ISSUE_DATE" />
		</property>

		<!-- Certificate Status -->
		<property name="certificateStatus" type="java.lang.String">
			<column name="CERTIFICATE_STATUS" />
		</property>

		<!-- BaseDTO Fields -->

		<property name="createdBy" type="java.lang.String" length="50">
			<column name="CREATED_BY" />
		</property>

		<property name="modifiedBy" type="java.lang.String" length="50">
			<column name="MODIFIED_BY" />
		</property>

		<property name="createdDatetime" type="java.sql.Timestamp">
			<column name="CREATED_DATETIME" />
		</property>

		<property name="modifiedDatetime" type="java.sql.Timestamp">
			<column name="MODIFIED_DATETIME" />
		</property>

	</class>

</hibernate-mapping>