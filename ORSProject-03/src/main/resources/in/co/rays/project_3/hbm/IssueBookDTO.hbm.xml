<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="in.co.rays.project_3.dto">

	<class name="IssueBookDTO" table="ST_ISSUE_BOOK">

		<!-- Primary Key -->
		<id name="id" type="java.lang.Long">
			<column name="ID" />
			<generator class="increment" />
		</id>

		<!-- Issue Code -->
		<property name="issueCode" type="java.lang.String">
			<column name="ISSUE_CODE" />
		</property>

		<!-- Student Name -->
		<property name="studentName" type="java.lang.String">
			<column name="STUDENT_NAME" />
		</property>

		<!-- Issue Date -->
		<property name="issueDate" type="java.util.Date">
			<column name="ISSUE_DATE" />
		</property>

		<!-- Return Date -->
		<property name="returnDate" type="java.util.Date">
			<column name="RETURN_DATE" />
		</property>

		<!-- BaseDTO Fields -->

		<property name="createdBy" type="java.lang.String"
			length="50">
			<column name="CREATED_BY" />
		</property>

		<property name="modifiedBy" type="java.lang.String"
			length="50">
			<column name="MODIFIED_BY" />
		</property>

		<property name="createdDatetime" type="java.sql.Timestamp">
			<column name="CREATED_DATETIME" />
		</property>

		<property name="modifiedDatetime" type="java.sql.Timestamp">
			<column name="MODIFIED_DATETIME" />
		</property>

	</class>

</hibernate-mapping>